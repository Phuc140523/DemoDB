@*@model IEnumerable<DemoDB.Models.Product>*@
@using DemoDB.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<DemoDB.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #div-ds{
        text-align:center;
        background-color:forestgreen;
        height:50px;
        border-radius:20px 20px 0 0;
    }
    .MenuPage{
        display:inline;
    }
</style>
<div id="div-ds"><h2 style="padding-top:10px;color:white">DANH MUC SAN PHAM</h2></div>
<div class=" container">
    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card-pro">
                   
                    <img src="@Url.Content(pro.ImagePro)" height="150" width="150" />
                    <p>@Html.DisplayFor(model => pro.NamePro) </p>
                    <p> @Html.DisplayFor(model => pro.Price) </p>
                    <a href="/ShopingCart/AddToCart/@pro.ProductID" class="btn btn_default">Buy </a>
                </div>
            </div>
        }
    </div>
</div>
Trang @(Model.PageNumber)/@Model.PageCount
<div class="MenuPage">
    @Html.PagedListPager(Model,Page=>Url.Action("Index",new {page=Page}))
</div>


